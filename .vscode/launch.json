    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "btcopilot",
                "FLASK_CONFIG": "development",
                "FLASK_DEBUG": "1",
            },
            "args": [
                "run",
                "-p", "8888"
            ],
            "justMyCode": false,
            "jinja": true
        },
        {
            "name": "Gunicorn flask",
            "type": "python",
            "request": "launch",
            "module": "gunicorn",
            "env": {
                "FLASK_APP": "btcopilot",
                "FLASK_CONFIG": "development",
                "CELERY_BROKER_URL": "redis://localhost:6379/0",
                "CELERY_RESULT_BACKEND": "redis://localhost:6379/0"
            },
            "args": [
                "--bind", "0.0.0.0:8888",
                "--worker-class", "sync",
                "--workers", "2",
                "--threads", "2",
                "--timeout", "45",
                "--keep-alive", "2",
                "--max-requests", "1000",
                "--max-requests-jitter", "50",
                "btcopilot.app:create_app()"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Worker (Debug)",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "env": {
                "FLASK_CONFIG": "development",
            },
            "args": [
                "-A", "btcopilot.celery:celery",
                "worker",
                "--pool=solo",
                "--loglevel=debug"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Worker (Multi-worker)",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "env": {
                "FLASK_CONFIG": "development"
            },
            "args": [
                "-A", "btcopilot.celery:celery",
                "worker",
                "--pool=threads",
                "--concurrency=4",
                "--loglevel=info"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Celery Beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "env": {
                "FLASK_CONFIG": "development"
            },
            "args": [
                "-A", "btcopilot.celery:celery",
                "beat",
                "--loglevel=info"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "ingest",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "console": "integratedTerminal",
            "justMyCode": false,
            "variablePresentation": {
                "all": "hide",
                "protected": "inline",
            },
            "args": [
                "ingest",
                // "--data-dir",
                // "${workspaceFolder}/tests/data/vector_db",
                "--sources-dir",
                "${workspaceFolder}/btcopilot-sources/collective-intelligence"
            ],
            "env": {
                "FLASK_APP": "btcopilot",
            },
        },
        {
            "name": "orchstrator",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/orchestration.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "variablePresentation": {
                "all": "hide",
                "protected": "inline",
            },
            "args": [
            ],
            "env": {
                "FLASK_APP": "btcopilot",
            },
        },        
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "/Users/patrick/Documents/2 - Work/2 - Family Diagram App/2 - Copilot/bowentheory/FE Chapters/10 - Family Evaluation.pdf"
            ]
        },
        {
            "name": "Debug Unit Test",
            "type": "debugpy",
            "purpose": "debug-test",
            "justMyCode": false,
            "args": [
                "-svvx"
            ],
        },
    ]
}